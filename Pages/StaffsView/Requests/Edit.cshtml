@page
@model QuotationApplication.Pages_Requests.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Request</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Request.RequestId" />
            <div class="form-group">
                
                <label asp-for="Request.Service" class="control-label"></label>
                <input readonly asp-for="Request.Service" class="form-control" />
                <span asp-validation-for="Request.Service" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Request.Email" class="control-label"></label>
                <input readonly asp-for="Request.Email" class="form-control" />
                <span asp-validation-for="Request.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Request.Fname" class="control-label"></label>
                <input readonly asp-for="Request.Fname" class="form-control" />
                <span asp-validation-for="Request.Fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Request.Lname" class="control-label"></label>
                <input  readonly asp-for="Request.Lname" class="form-control" />
                <span asp-validation-for="Request.Lname" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Request.Status" class="control-label"></label>
                <select asp-for="Request.Status" class="form-control">
                    <option value="Accepted">Accepted</option>
                     <option value="Rejected">Rejected</option>
                </select>
                @* <input asp-for="Request.Status" class="form-control" /> *@
                <span asp-validation-for="Request.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
