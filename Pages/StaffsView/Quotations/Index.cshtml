@page
@model QuotationApplication.Pages_Quotations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Quotations</h1>



<p>
    <a asp-page="Selection">Create New</a>
</p>

<form>
    <div class="form-actions no-color">
        <p>
  <label>Status: <input type="text" asp-for="searchOne" /></label>
        <input type="submit" value="Filter"class="btn btn-primary" />
            <a asp-page="./Index">Back to full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Quotation[0].Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quotation[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quotation[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quotation[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quotation[0].Tax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quotation[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quotation[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quotation[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quotation[0].ExpireON)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Quotation) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Service)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpireON)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.QuotationId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.QuotationId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.QuotationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
