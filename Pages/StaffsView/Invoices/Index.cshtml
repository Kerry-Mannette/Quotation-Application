@page
@model QuotationApplication.Pages_Invoices.IndexModel

@{
    ViewData["Title"] = "Invoices";
}

<h1>Invoices</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].AmountDue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].ExpireON)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Invoice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountDue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpireON)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.InvoiceId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.InvoiceId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.InvoiceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
