@page
@model QuotationApplication.Pages_Invoices.OutstandingModel

@{
    ViewData["Title"] = "Index";
}

<h1>Oustanding</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].AmountDue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].ExpireON)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Invoice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountDue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            @if(DateTime.Now>item.ExpireON){
            <td class="text-danger">
                @Html.DisplayFor(modelItem => item.ExpireON)
            </td>    
            }else{
            <td>
                @Html.DisplayFor(modelItem => item.ExpireON)
            </td>      
            }

            <td>
                <a asp-page="./Edit" asp-route-id="@item.InvoiceId">Edit</a> 
            </td>
        </tr>
}
    </tbody>
</table>
