@model QuotationApplication.Pages_Invoices.CreateModel

        @{
        ViewData["Title"] = "Create";
        }
        
        <h1>Create</h1>
        
    <h4>Invoice</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
    <form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Invoice.Customer" class="control-label"></label>
                <input asp-for="Invoice.Customer" class="form-control" />
                <span asp-validation-for="Invoice.Customer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.Number" class="control-label"></label>
                <input asp-for="Invoice.Number" class="form-control" />
                <span asp-validation-for="Invoice.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.Email" class="control-label"></label>
                <input asp-for="Invoice.Email" class="form-control" />
                <span asp-validation-for="Invoice.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.AmountDue" class="control-label"></label>
                <input asp-for="Invoice.AmountDue" class="form-control" />
                <span asp-validation-for="Invoice.AmountDue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.Status" class="control-label"></label>
                <select asp-for="Invoice.Status" class="form-control">
                    <option value="Outstanding">Outstanding</option>
                    <option value="Accepted">Accepted</option>
                </select>
                @* <input asp-for="Invoice.Status" class="form-control" /> *@
                <span asp-validation-for="Invoice.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.Date" class="control-label"></label>
                <input asp-for="Invoice.Date" class="form-control" />
                <span asp-validation-for="Invoice.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Invoice.ExpireON" class="control-label"></label>
                <input asp-for="Invoice.ExpireON" class="form-control" />
                <span asp-validation-for="Invoice.ExpireON" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

